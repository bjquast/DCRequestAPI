<div id="stacked_queries_macro">
	<fieldset id="stacked_queries_search" class="flex-space-between-no-margin">
		<legend>Search</legend>
		<div class="flex-start-no-margin">
			<div class="stacked-search-grid">
				<!-- when first or more fields are filled -->
				<block tal:condition="python: 'stack_queries' in search_params and len(search_params['stack_queries']) > 0" tal:omit-tag="">
					<block tal:repeat="query search_params['stack_queries']" tal:omit-tag="">
						<block tal:define="i repeat.query.index" tal:omit-tag="">
							<!-- outer connector for the rows -->
							<div>
								<select name="stack_search_outer_connector_${i}" tal:attributes="class 'invisible' if i < 1 else None">
									<option tal:attributes="selected 'selected' if search_params['stack_queries'][i]['outer_connector'] == 'AND' else None">AND</option>
									<option tal:attributes="selected 'selected' if search_params['stack_queries'][i]['outer_connector'] == 'OR' else None">OR</option>
								</select>
							</div>
							<!-- former search terms and sub queries as filled inputs -->
							<div tal:condition="python: len(search_params['stack_queries'][i]['string']) > 0" class="flex-row-start">
								<div tal:repeat="search_term search_params['stack_queries'][i]['string']" class="no-whitespace-wrap">
									<block tal:define="j repeat.search_term.index" tal:omit-tag="">
										<block tal:define="date_from search_params['stack_queries'][i]['date_from'][j]; date_to search_params['stack_queries'][i]['date_to'][j]" tal:omit-tag="">
											<!-- the starting parenthesis for subguery -->
											<span tal:attributes="class '' if (len(search_params['stack_queries'][i]['query_type']) > 1 or 'add_subquery' in search_params['stack_queries'][i]) and j == 0 else 'invisible'">(</span>
											<!-- a filled search field -->
											<span tal:condition="python: len(search_term) > 0 or len(date_from) > 0 or len(date_to) > 0" id="stack_query_id_${i}_${j}" data-query-type="${search_params['stack_queries'][i]['query_type'][j]}">
												
												<input tal:condition="python: search_params['stack_queries'][i]['field'][j] not in date_fields" form="search_form" type="text" class="width-11em with_clearbutton" value="${search_term}" name="stack_query_string_${i}_${j}" />
												<label tal:condition="python: search_params['stack_queries'][i]['field'][j] in date_fields">Date from: </label>
												<input tal:condition="python: search_params['stack_queries'][i]['field'][j] in date_fields" form="search_form" type="date" class="width-11em with_clearbutton" value="${date_from}" name="stack_query_date_from_${i}_${j}" />
												<label tal:condition="python: search_params['stack_queries'][i]['field'][j] in date_fields">Date to: </label>
												<input tal:condition="python: search_params['stack_queries'][i]['field'][j] in date_fields" form="search_form" type="date" class="width-11em with_clearbutton" value="${date_to}" name="stack_query_date_to_${i}_${j}" />
												<select form="search_form" name="stack_query_field_${i}_${j}" class="width-11em stack_query_field_selector">
													<option tal:attributes="selected 'selected' if search_params['stack_queries'][i]['field'][j] == 'all fields' else None" value="all fields">all fields</option>
													<block tal:repeat="source_field stacked_query_fields" tal:omit-tag="">
														<option value="${source_field}" tal:attributes="selected 'selected' if search_params['stack_queries'][i]['field'][j] == source_field else None">
															${coldefs[source_field]['en']}
														</option>
													</block>
												</select>
												<!-- the closing parenthesis for subguery -->
												<span tal:attributes="class 'invisible' if len(search_params['stack_queries'][i]['query_type']) < 2 or j+1 != len(search_params['stack_queries'][i]['query_type']) or 'add_subquery' in search_params['stack_queries'][i] else None">)</span>
											</span>
										</block>
									</block>
									<span tal:condition="repeat.search_term.index >= 0 and repeat.search_term.index < len(search_params['stack_queries'][i]['string'])-1">${search_params['stack_queries'][i]['inner_connector']}</span>
									<span tal:condition="repeat.search_term.index >= 0 and repeat.search_term.index == len(search_params['stack_queries'][i]['string'])-1 and 'add_subquery' in search_params['stack_queries'][i]">${search_params['stack_queries'][i]['inner_connector']}</span>
								</div>
								<!-- add empty subquery -->
								<div tal:condition="'add_subquery' in search_params['stack_queries'][i]" class="no-whitespace-wrap">
									<block tal:define="j len(search_params['stack_queries'][i]['string'])" tal:omit-tag="">
										<span id="stack_query_id_${i}_${j}" data-query-type="term">
											<span class="invisible">(</span>
											<input id="stack_query_string_${i}_${j}" form="search_form" class="width-11em with_clearbutton" type="text" name="stack_query_string_${i}_${j}" value=""/>
											<!-- field selector -->
											<block tal:define="j len(search_params['stack_queries'][i]['string'])" tal:omit-tag="">
												<select form="search_form" name="stack_query_field_${i}_${j}" class="width-11em stack_query_field_selector">
													<option value="all fields">all fields</option>
													<option tal:repeat="source_field stacked_query_fields" value="${source_field}">
														${coldefs[source_field]['en']}
													</option>
												</select>
											</block>
										</span>
									</block>
									<span>)</span>
								</div>
							</div>
							<div class="align-self-last-baseline">
								<!-- inner search terms connector -->
								<block tal:define="token_num len(search_params['stack_queries'][i]['string']) | 0" tal:omit-tag="">
									<span tal:attributes="class 'invisible' if token_num < 2 and 'add_subquery' not in search_params['stack_queries'][i] else None">
										<select name="stack_search_inner_connector_${i}">
											<option tal:attributes="selected 'selected' if search_params['stack_queries'][i]['inner_connector'] == 'AND' else None">AND</option>
											<option tal:attributes="selected 'selected' if search_params['stack_queries'][i]['inner_connector'] == 'OR' else None">OR</option>
										</select>
									</span>
									<!-- add subquery checkboxes --> 
									<input id="stack_search_add_subquery_${i}" class="add_subsearch_checkbox hidden" type="checkbox" name="stack_search_add_subquery_${i}" data-stacked-query-num="${i}">
									<label for="stack_search_add_subquery_${i}" class="add_subsearch_label margin-left-2em" data-stacked-query-num="${i}">add</label>
								</block>
							</div>
						</block>
					</block>
				</block>
				
				<!-- add an empty input field -->
				<block tal:define="next_i len(search_params['stack_queries']) | 0" tal:omit-tag="">
					<!-- outer connector for the rows. first is empty -->
					<div>
						<select name="stack_search_outer_connector_${next_i}" tal:attributes="class 'hidden' if next_i < 1 else None">
							<option>AND</option>
							<option>OR</option>
						</select>
					</div>
					<!-- input for search strings -->
					<div id="stack_query_id_${next_i}_0" data-query-type="term">
						<span class="invisible">(</span>
						<block tal:condition="python: len(search_params['stack_queries']) <= 0" tal:omit-tag="">
							<input id="stack_query_string_${next_i}_0" form="search_form" class="width-11em with_clearbutton" type="text" name="stack_query_string_${next_i}_0" value=""/>
							<select form="search_form" name="stack_query_field_${next_i}_0" class="width-11em stack_query_field_selector">
								<option value="all fields">all fields</option>
								<option tal:repeat="source_field stacked_query_fields" value="${source_field}">
									${coldefs[source_field]['en']}
								</option>
							</select>
						</block>
						<block tal:condition="python: len(search_params['stack_queries']) > 0" tal:omit-tag="">
							<input id="stack_query_string_${next_i}_0" form="search_form" class="width-11em with_clearbutton" type="text" name="stack_query_string_${next_i}_0" value=""/>
							<!-- field selector -->
							<select form="search_form" name="stack_query_field_${next_i}_0" class="width-11em stack_query_field_selector">
								<option value="all fields">all fields</option>
								<option tal:repeat="source_field stacked_query_fields" value="${source_field}">
									${coldefs[source_field]['en']}
								</option>
							</select>
						</block>
						
						<!-- inner search terms connector -->
						<block tal:define="token_num len(search_params['stack_queries'][next_i]['string']) | 0" tal:omit-tag="">
							<span tal:attributes="class 'hidden' if token_num < 1 else None">
								<label> connect by </label>
								<select name="stack_search_inner_connector_${next_i}">
									<option>AND</option>
									<option>OR</option>
								</select>
							</span>
						</block>
						<span class="invisible">)</span>
					</div>
					
				</block>
				
				
			</div>
			<input class="margin-left-2em" form="search_form" type="submit" value="Search"/>
		</div>
		<div tal:condition="python: authenticated_user is not None">
			<input id="restrict_users_projects_checkbox" type="checkbox" name="restrict_to_users_projects" tal:attributes="checked 'checked' if 'restrict_to_users_projects' in search_params else None">
			<label>Restrict to my projects</label>
		</div>
	</fieldset>
</div>

