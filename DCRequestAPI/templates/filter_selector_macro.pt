<details id="filter_preferences">
	<summary class="clickable">Select filters</summary>
	<ul class="ul-no-bullet">
		<li tal:repeat="filter_key available_filter_fields">
			<input id="filter_section_checkbox_${filter_key}" type="checkbox" form="search_form" name="selected_filter_sections" value="${filter_key}" tal:attributes="checked 'checked' if filter_key in selected_filter_sections else None">
			<label for="filter_section_checkbox_${filter_key}">${bucketdefs[filter_key]['en']}</label>
		</li>
	</ul>
</details>
